{
  "compilerOptions": {
    "lib": ["es2017", "es2019"],
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "removeComments": true,
    "strictBindCallApply": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "./typings.d.ts"],
  "exclude": ["node_modules"]
}
